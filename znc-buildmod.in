#!/bin/sh

ERROR="[ !! ]"
WARNING="[ ** ]"
OK="[ ok ]"

# Check if we got everything we need

check_binary()
{
	which $1 > /dev/null 2>&1
	if test $? = 1 ; then
		echo "${ERROR} Could not find $1. $2"
		exit 1
	fi
}

if test "x$CXX" = "x" ; then
	CXX="@CMAKE_CXX_COMPILER@"
fi
if test "x$CXX" = "x" ; then
	CXX=g++
fi

check_binary ${CXX} "What happened to your compiler?"

if test -z "$1"; then
	echo "${WARNING} USAGE: $0 <file.cpp> [file.cpp ... ]"
	exit 1
fi

CXXFLAGS="@ZNC_CXXFLAGS@ $CXXFLAGS"
LDFLAGS="@ZNC_LDFLAGS@ $LDFLAGS"
VERSION="@ZNC_VERSION@"

while test ! -z "$1"
do
	FILE=$1
	shift

	MOD="${FILE%.cpp}"
	MOD="${MOD%.cc}"

	if test ! -f "${FILE}"; then
		echo "${ERROR} Building \"${MOD}.so\" for ZNC $VERSION... File not found"
	else
		printf "Building \"${MOD}.so\" for ZNC $VERSION... "
		if ${CXX} ${CXXFLAGS} ${INCLUDES} ${LDFLAGS} -o "${MOD}.so" "${FILE}" ${LIBS} ; then
			echo "${OK}"
		else
			echo "${ERROR} Error while building \"${MOD}.so\""
			exit 1
		fi
	fi
done

exit 0
